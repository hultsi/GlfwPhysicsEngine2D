  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "Compile_project",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "./resources/glfwSquare.cpp",
        "./resources/glfwGameControl.cpp",
        "-o",
        "build/out.exe",
        "-L.",
        "-lglfw3",
        "-lopengl32",
        "-lgdi32"
      ]
    }
  ]
}
